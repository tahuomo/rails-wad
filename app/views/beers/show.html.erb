<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @beer.name %>
</p>

<p>
  <b>Style:</b>
  <%= @beer.style %>
</p>

<p>
  <b>Brewery:</b>
  <%= @beer.brewery_id %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      beer has not yet been rated!
  <% else %>
      beer has <%= pluralize(@beer.ratings.count, 'rating') %>, average: <%= @beer.average_rating %>
  <% end %>
</p>

<% if current_user %>
    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>
<% end %>


<%= link_to 'Edit', edit_beer_path(@beer) if current_user %> |
<%= link_to 'Back', beers_path %>
<%= link_to 'list of breweries', breweries_path %>
