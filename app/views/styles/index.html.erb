<h1>Listing styles</h1>

<table class="table table-hover">
  <thead>
      <tr>
        <th>Name</th>
      </tr>
  </thead>

<% @styles.each do |style| %>
  <tr>
    <td><%= link_to style.name, style %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Style', new_style_path, :class => "btn btn-primary" if current_user %>
